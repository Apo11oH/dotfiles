    <!-- Custom key bindings -->
    <keybind key="Print">
      <action name="Execute">
        <command>scrot -e "mv ~/*scrot.png ~/Desktop"</command>
        <startupnotify>
          <enabled>yes</enabled>
          <name>Screenshot</name>
        </startupnotify>
      </action>
    </keybind>
    <keybind key="A-Print">
      <action name="Execute">
        <command>scrot -se "mv ~/*scrot.png ~/Desktop"</command>
        <startupnotify>
          <enabled>yes</enabled>
          <name>Select Screenshot</name>
        </startupnotify>
      </action>
    </keybind>
    <keybind key="W-l">
      <action name="Execute">
        <command>slimlock</command>
        <startupnotify>
          <enabled>yes</enabled>
          <name>Slimlock</name>
        </startupnotify>
      </action>
    </keybind>
    <keybind key="W-y">
      <action name="Execute">
        <command>terminator --geometry=1000x650+0+0</command>
        <startupnotify>
          <enabled>yes</enabled>
          <name>Terminator</name>
        </startupnotify>
      </action>
    </keybind>
